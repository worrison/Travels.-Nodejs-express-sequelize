{{#if error}}
    <p>ERROR: {{error}}</p>
{{/if}}
<form action="/users/login" method="post">
    <input type="text" name="email" id="email" placeholder="email">
    <input type="password" name="password" id="password" placeholder="password">
    {{#if req.session.name}} 
        {{req.session.name}}
    {{else}}
        <button type="submit">Login </button>
    {{/if}}
</form>